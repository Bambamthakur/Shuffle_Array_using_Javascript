<script>

function swap(arr, a, b)
	{
		let temp = arr[a];
		arr[a] = arr[b];
		arr[b] = temp;
	}


function sort( arr, n)
	{
		
		for (let i = 0; i < n; i+=2)
		{
		
			if (i>0 && arr[i-1] < arr[i] )
				swap(arr, i, i-1);

			if (i<n-1 && arr[i] > arr[i+1] )
				swap(arr, i, i + 1);
		}
	}


	
	let arr = [10, 90, 49, 2, 1, 5, 23];
	let n = arr.length;
	sort(arr, n);
	for (let i=0; i<n; i++)
	document.write(arr[i] + " ");
	
</script>					
